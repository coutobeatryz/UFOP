#include <stdio.h>
#include <stdlib.h>

int main()
{
    float raio, area, perimetro;

    printf("Digite o raio do circulo: ");
    scanf("%f", &raio);

    area = 3.14 * raio * raio;
    printf("\nArea: %.2f", area);

    perimetro = 2 * 3.14 * raio;
    printf("\nPerimetro: %.2f", perimetro);

    return 0;
}
